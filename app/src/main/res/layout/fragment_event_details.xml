<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:focusable="true"
    android:background="#FFF6F6"
    android:id="@+id/scrolFullText"
    >



<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:isScrollContainer="true">
        <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/cb1">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#FCFDFF"
                                android:id="@+id/cardView5">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="120dp"

                                    android:id="@+id/event_image"

                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/l1"
                                    android:orientation="horizontal"
                                    android:layout_below="@+id/event_image"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true"
                                    android:layout_marginTop="10dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="20dp"
                                        android:textSize="18dp"
                                        android:text="java course chennai"
                                        android:id="@+id/title" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:id="@+id/l3"
                                    android:layout_marginTop="6dp"
                                    android:layout_below="@+id/l2"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:layout_width="68dp"
                                        android:layout_height="match_parent"
                                        android:id="@+id/place_icon"
                                        android:src="@mipmap/flag"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="3dp"
                                        android:layout_toRightOf="@+id/place_icon"
                                        android:id="@+id/organise"
                                        android:text="organiser"/>


                                </RelativeLayout>
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:layout_marginTop="6dp"
                                    android:layout_marginBottom="6dp"
                                    android:layout_below="@+id/l3"
                                    android:id="@+id/l4"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:layout_width="68dp"
                                        android:layout_height="match_parent"
                                        android:id="@+id/eve_icon"
                                        android:src="@mipmap/clock" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="9.00 am"
                                        android:gravity="center"
                                        android:id="@+id/eve_time"
                                        android:layout_alignParentBottom="true"
                                        android:layout_toRightOf="@+id/eve_icon"
                                        android:layout_toEndOf="@+id/eve_icon" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:id="@+id/l2"
                                    android:layout_marginTop="10dp"
                                    android:orientation="horizontal"
                                    android:layout_below="@+id/l1"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true">
                                    <ImageView
                                        android:layout_width="68dp"
                                        android:layout_height="match_parent"
                                        android:id="@+id/date_icon"
                                        android:src="@mipmap/icondd"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="3dp"
                                        android:id="@+id/date_event"
                                        android:layout_toRightOf="@+id/date_icon"
                                        android:text="28-02-2017"/>

                                </RelativeLayout>

                            </RelativeLayout>








                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/cardView4"
                                android:layout_below="@+id/cardView5"
                                android:layout_marginTop="5dp"
                                android:background="#FCFDFF"
                                android:layout_marginBottom="5dp"
                                android:orientation="horizontal"
                                android:weightSum="3">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="24dp"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginTop="3dp"
                                    android:id="@+id/date_icon"
                                    android:src="@mipmap/rupees"
                                    android:layout_weight="0.13" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/event_cost"
                                    android:layout_marginLeft="10dp"
                                    android:textSize="20dp"
                                    android:layout_toRightOf="@+id/date_icon"
                                    android:layout_marginTop="2dp"
                                    android:textColor="#202020"
                                    android:text="0" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/on"
                                    android:gravity="center"
                                    android:layout_marginLeft="17dp"
                                    android:text="onwards"
                                    android:layout_weight="0.13"
                                    android:layout_centerVertical="true"
                                    android:layout_toRightOf="@+id/event_cost"
                                    android:layout_toEndOf="@+id/event_cost"
                                    android:layout_marginStart="17dp" />
                            </RelativeLayout>






                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:id="@+id/card"
                                android:background="#FCFDFF"
                                android:layout_below="@+id/cardView4"
                                >

                                <TextView
                                    android:id="@+id/about_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"


                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:textColor="#202020"
                                    android:layout_marginLeft="23dp"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginTop="10dp"
                                    android:text="About"
                                    android:textSize="14dp" />

                                <TextView
                                    android:id="@+id/about"
                                    android:layout_width="match_parent"
                                    android:layout_height="15dp"

                                    android:textSize="13dp"
                                    android:layout_marginLeft="23dp"

                                    android:layout_alignLeft="@+id/about_title"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignStart="@+id/about_title"
                                    android:layout_below="@+id/about_title"
                                    android:layout_marginTop="10dp"
                                    android:textColor="#606060"
                                    android:text="Textview" />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:gravity="center"

                                    android:textColor="#ffffff"
                                    android:textStyle="bold"
                                    android:background="#F9D6D1"
                                    android:id="@+id/more_about"
                                    android:layout_below="@+id/about"
                                    android:text="more" />


                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="300dp"
                                android:id="@+id/card5"
                                android:background="#FCFDFF"
                                android:layout_below="@+id/card"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/textView3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="23dp"
                                    android:textSize="12dp"
                                    android:textColor="#202020"
                                    android:layout_marginStart="23dp"
                                    android:layout_marginTop="5dp"
                                    android:text="Location"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="250dp"
                                    android:id="@+id/l3"
                                    android:layout_marginTop="30dp"
                                    android:layout_below="@+id/lle"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_toRightOf="@+id/place_icon"

                                        android:textColor="#606060"

                                        android:id="@+id/event_place"
                                        android:text="madurai"/>

                                    <ImageView
                                        android:layout_width="68dp"
                                        android:layout_height="18dp"
                                        android:id="@+id/place_icon"
                                        android:src="@mipmap/mapicon"
                                        android:layout_alignParentTop="true"
                                        android:layout_alignParentLeft="true"
                                        android:layout_alignParentStart="true" />
                                </RelativeLayout>
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:layout_marginTop="5dp"
                                    android:layout_below="@id/textView3"
                                    android:id="@+id/map"
                                    android:src="@mipmap/map_image"/>


                            </RelativeLayout>







                </RelativeLayout>
</ScrollView>




</RelativeLayout>