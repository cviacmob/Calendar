<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent"



    tools:context="com.cviac.calendar.Event">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/cb1">
                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/cardView5"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="5dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="120dp"

                                    android:id="@+id/event_image"

                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/l1"
                                    android:orientation="horizontal"
                                    android:layout_below="@+id/event_image"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true"
                                    android:layout_marginTop="10dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="20dp"
                                        android:textSize="18dp"
                                        android:text="java course chennai"
                                        android:id="@+id/title" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/l3"
                                    android:layout_marginTop="6dp"
                                    android:layout_below="@+id/l2"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:layout_width="68dp"
                                        android:layout_height="match_parent"
                                        android:id="@+id/place_icon"
                                        android:src="@mipmap/flag"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="3dp"
                                        android:id="@+id/organise"
                                        android:text="organiser"/>


                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="6dp"
                                    android:layout_marginBottom="6dp"
                                    android:layout_below="@+id/l3"
                                    android:id="@+id/l4"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:layout_width="68dp"
                                        android:layout_height="match_parent"
                                        android:id="@+id/eve_icon"
                                        android:src="@mipmap/clock" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="3dp"
                                        android:text="9.00 am"
                                        android:id="@+id/eve_time"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/l2"
                                    android:layout_marginTop="10dp"
                                    android:orientation="horizontal"
                                    android:layout_below="@+id/l1"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true">
                                    <ImageView
                                        android:layout_width="68dp"
                                        android:layout_height="match_parent"
                                        android:id="@+id/date_icon"
                                        android:src="@mipmap/icondd"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="3dp"
                                        android:id="@+id/date_event"
                                        android:text="28-02-2017"/>

                                </LinearLayout>

                            </RelativeLayout>


                        </android.support.v7.widget.CardView>



                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/cardView5"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="1dp"
                            android:id="@+id/cardView4">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/l5"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:orientation="horizontal"
                                android:weightSum="3">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="24dp"
                                    android:layout_marginLeft="12dp"
                                    android:layout_marginTop="3dp"
                                    android:id="@+id/date_icon"
                                    android:src="@mipmap/rupees"
                                    android:layout_weight="0.13" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/event_cost"
                                    android:textSize="20dp"
                                    android:layout_marginTop="2dp"
                                    android:textColor="#202020"
                                    android:text="0" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/on"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="2dp"
                                    android:text="onwards"
                                    android:layout_weight="0.13" />
                            </LinearLayout>
                        </android.support.v7.widget.CardView>



                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:id="@+id/card"
                            android:layout_below="@+id/cardView4"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:id="@+id/ccc"
                                >

                                <TextView
                                    android:id="@+id/about_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"


                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:textColor="#202020"
                                    android:layout_marginLeft="23dp"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginTop="10dp"
                                    android:text="About"
                                    android:textSize="14dp" />

                                <TextView
                                    android:id="@+id/about"
                                    android:layout_width="match_parent"
                                    android:layout_height="15dp"

                                    android:textSize="13dp"
                                    android:layout_marginLeft="23dp"

                                    android:layout_alignLeft="@+id/about_title"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignStart="@+id/about_title"
                                    android:layout_below="@+id/about_title"
                                    android:layout_marginTop="10dp"
                                    android:textColor="#606060"
                                    android:text="Textview" />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:background="#ffffff"
                                    android:id="@+id/more_about"
                                    android:layout_below="@+id/ccc"
                                    android:text="more"/>


                            </LinearLayout>



                        </android.support.v7.widget.CardView>



                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:id="@+id/card5"
                            android:layout_marginTop="4dp"
                            android:layout_below="@+id/card"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/lle"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/textView3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="23dp"
                                    android:textSize="12dp"
                                    android:textColor="#202020"
                                    android:layout_marginStart="23dp"
                                    android:layout_marginTop="5dp"
                                    android:text="Location"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/l3"
                                    android:layout_marginTop="10dp"
                                    android:layout_below="@+id/lle"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:layout_width="68dp"
                                        android:layout_marginTop="2dp"
                                        android:layout_height="match_parent"
                                        android:id="@+id/place_icon"
                                        android:src="@mipmap/mapicon"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"

                                        android:textColor="#606060"

                                        android:id="@+id/event_place"
                                        android:text="madurai"/>
                                </LinearLayout>
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:layout_marginTop="5dp"
                                    android:layout_below="@id/textView3"
                                    android:id="@+id/map"
                                    android:src="@mipmap/map_image"/>


                            </LinearLayout>

                        </android.support.v7.widget.CardView>






                </RelativeLayout>


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>