<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:padding="5dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/event_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="24dp"
                android:text="Hello World!"
                android:textColor="@color/black"
                android:textSize="24sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/place_icon"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/event_place"

                    android:layout_alignLeft="@+id/date_icon"
                    android:layout_alignStart="@+id/date_icon"
                    android:layout_alignTop="@+id/event_place"
                    android:layout_toEndOf="@+id/date_icon"
                    android:layout_toRightOf="@+id/date_icon"
                    android:src="@mipmap/mapicon" />

                <TextView
                    android:id="@+id/title"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"


                    android:layout_alignParentTop="true"

                    android:layout_marginLeft="15dp"
                    android:text="Actoin1"
                    android:textSize="22dp" />

                <ImageView
                    android:id="@+id/date_icon"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/event_place"
                    android:layout_alignLeft="@+id/title"
                    android:layout_alignStart="@+id/title"
                    android:layout_alignTop="@+id/date_event"
                    android:src="@mipmap/icondd" />

                <TextView
                    android:id="@+id/event_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/date_event"
                    android:layout_alignStart="@+id/date_event"
                    android:layout_below="@+id/date_event"

                    android:layout_marginTop="5dp"
                    android:text="Textview"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/date_event"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/date_icon"
                    android:layout_toRightOf="@+id/date_icon"
                    android:text="Textview"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/eve_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/event_place"
                    android:layout_alignRight="@+id/event_place"
                    android:layout_below="@+id/event_place"
                    android:layout_marginTop="5dp"
                    android:text="Textview" />

                <ImageView
                    android:id="@+id/time_icon"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"

                    android:layout_alignBottom="@+id/eve_time"
                    android:layout_alignLeft="@+id/place_icon"
                    android:layout_alignStart="@+id/place_icon"
                    android:layout_alignTop="@+id/eve_time"
                    android:layout_toLeftOf="@+id/event_place"
                    android:layout_toStartOf="@+id/event_place"
                    android:src="@mipmap/clock" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"


                android:layout_alignParentStart="true"
                android:layout_below="@+id/relativeLayout3"
                android:layout_marginTop="10dp"
                android:background="#FA8072">

                <ImageView
                    android:id="@+id/rupe_icon"
                    android:layout_width="30dp"
                    android:layout_height="22dp"

                    android:layout_alignBottom="@+id/event_cost"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/event_cost"
                    android:layout_marginLeft="14dp"
                    android:layout_marginStart="14dp"
                    android:src="@mipmap/rupees" />

                <TextView
                    android:id="@+id/event_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/rupe_icon"
                    android:layout_toRightOf="@+id/rupe_icon"
                    android:text="Textview" />


            </RelativeLayout>


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/re1"
            android:layout_width="match_parent"

            android:layout_height="match_parent">

            <TextView
                android:id="@+id/about_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"

                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="About"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/about_title"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignStart="@+id/about_title"
                android:layout_below="@+id/about_title"
                android:layout_marginTop="10dp"
                android:text="Textview"
                android:textSize="10dp" />

            <RelativeLayout
                android:id="@+id/more_r"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@+id/about"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/more_about"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="#ffffff"
                    android:text="MOre" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/more_r">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="25dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="11dp"
                    android:text="Location" />

            </RelativeLayout>


        </RelativeLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>
